<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgviewbackgroundbanner"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    <View
        android:background="@drawable/custom_background_banner"
        android:layout_width="wrap_content"
        android:layout_height="200dp"/>
    <RelativeLayout
        android:id="@+id/relativeBanner"
        android:layout_alignBottom="@+id/imgviewbackgroundbanner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imgviewBanner"
            android:layout_marginBottom="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:padding="2dp"
            android:layout_width="70dp"
            android:layout_height="70dp"/>
        <TextView
            android:id="@+id/txtviewTitleBanner"
            android:textSize="17sp"
            android:textColor="#ffffff"
            android:text="Lo yeu mat roi"
            android:layout_toRightOf="@id/imgviewBanner"
            android:layout_alignTop="@id/imgviewBanner"
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RelativeLayout
            android:layout_toRightOf="@id/imgviewBanner"
            android:layout_below="@+id/txtviewTitleBanner"
            android:layout_marginTop="7dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#fffdfc"
                android:id="@+id/txtNoiDung"
                android:text="Chao ban den voi ca khuc moi"
                android:maxLines="2"
                android:layout_marginRight="40dp"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>